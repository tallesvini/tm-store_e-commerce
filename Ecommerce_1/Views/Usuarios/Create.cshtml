@model Ecommerce_1.Models.Usuario

@{
    ViewData["Title"] = "Crie sua conta";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce_1</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

</head>
<body>

<div class="geral_login">
    <div class="container_login">
        <div class="login-conta">
            <h1>Já tenho cadastro</h1>
            <p>Informe seu email para autenticação!</p>
            <a class="navbar-brand" asp-area="" asp-controller="Usuarios" asp-action="Login">Login</a>
        </div>

        <div class="container-input">
            <h1>Primeira compra?</h1>
            <p>Cadastre-se facilmente</p>
            <div class="row form-input">
