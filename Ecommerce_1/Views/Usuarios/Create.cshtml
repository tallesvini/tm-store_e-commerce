                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group box-input">
                            <input type="text" asp-for="Nome" class="input-criar-conta" placeholder="Nome..."/>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group box-input">
                            <input type="tel" asp-for="Celular" id="phone" name="phone" onkeypress="mask(this, mphone);" onblur="mask(this, mphone);" class="input-criar-conta" placeholder="Celular..."/>
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                        <div class="form-group box-input">
                            <input type="email" asp-for="Email" class="input-criar-conta" placeholder="Digite seu email..."/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group box-input">
                            <div class="input-criar-conta-senha">
                                <div>
                                    <input type="password" class="input-criar-senha" asp-for="Senha" class="" placeholder="Digite sua senha..."/>
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                                </div>
                                <div class="show-hide-password">
                                    <div class="eyes-senha">
                                        <img class="show-password" src="~/img/visibility.png"/>
                                        <img class="hide-password" style="display: none;" src="~/img/visibility-off.png"/>

